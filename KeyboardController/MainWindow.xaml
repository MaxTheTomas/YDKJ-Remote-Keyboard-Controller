<Window x:Class="KeyboardController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyboardController"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="225" Width="500">
    <Canvas>
        <Label Margin="10" Content="IP"/>
        <TextBox Margin="30 15" Width="180" Name="IpBox"/>
        <Label Name="Error" FontWeight="Bold" Margin="10 30" Foreground="Red"/>
        <Button Name="StartC" Margin="10 130" Width="200" Height="20" Click="StartClient">Запустить клиент</Button>
        <Button Name="StopC" Margin="10 155" Width="200" Height="20" Click="StopClient">Остановить клиент</Button>
        
        
        <Button Name="StartS" Margin="270 130" Width="200" Height="20" Click="StartServer">Запустить сервер</Button>
        <Button Name="StopS" Margin="270 155" Width="200" Height="20" Click="StopServer">Остановить сервер</Button>
    </Canvas>
</Window>
